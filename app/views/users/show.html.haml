.wrapper
  .header
    = render "shared/header"

  .mypage
    = render "shared/mypage-side"

    .main
      .main-left
        .block
          .profile
            .users-info
              .users-info__icon
              .users-info__name
                = current_user.nickname
            .sub-info
              .assessment
                .assessment__title
                  評価
                .assessment__num
                  未実装
              .exhibit
                .exhibit__title
                  出品数
                .exhibit__num
                  = @user.items.length
        .contents
          %h1
            お知らせ
          %h1
            やることリスト
        .main-left__list
          %ul
            %li
            %li
            %li
            %li
            %li
            %li

  %aside.appBanner
    .inner
      %h2.inner__title だれでもかんたん、人生を変えるフリマアプリ
      %p.inner__text 今すぐ無料ダウンロード！
      .inner__icon
        = link_to image_tag("appstore.jpeg", alt: "サンプル画像"), "aBtn"
        = link_to image_tag("googleplay.png", alt: "サンプル画像"), "gBtn"

.footer
  = render "shared/footer"