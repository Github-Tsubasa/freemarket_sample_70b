.wrapper
  .header
    = render "shared/header"

  .mypage
    = render "shared/mypage-side"

    .main
      .main-left
        .block
          .profile
            .users-info
              .users-info__icon
              .users-info__name
                = current_user.nickname
            .sub-info
              .assessment
                .assessment__title
                  評価
                .assessment__num
                  未実装
              .exhibit
                .exhibit__title
                  出品数
                .exhibit__num
                  = @user.items.length
        .contents
          %h1
            お知らせ
          %h1
            やることリスト
        .main-left__list
          %ul
            %li
            %li
            %li
            %li
            %li
            %li

.mypage-footer
  %ul.contents
    %li.content
      %h2.content__head FURIMAについて
      %ul
        %li
          = link_to "#" do
            会社概要（運営会社）
        %li
          = link_to "#" do
            プライバシーポリシー
        %li
          = link_to "#" do
            FURIMA利用規約
        %li
          = link_to "#" do
            ポイントに関する特約

    %li.content
      %h2.content__head FURIMAを見る
      %ul
        %li
          = link_to "#" do
            カテゴリー一覧
        %li
          = link_to "#" do
            ブランド一覧

    %li.content
      %h2.content__head ヘルプ＆ガイド
      %ul
        %li
          = link_to "#" do
            FURIMAガイド
        %li
          = link_to "#" do
            FURIMAロゴ利用ガイドライン
        %li
          = link_to "#" do
            お知らせ

  .footer__logo
    = link_to image_tag("logo-white.png", width: '140px', height: '40.55px', alt: "サンプル画像"), root_path
    %p ©︎ FURIMA


= link_to new_item_path do
  .purchaseBtn
    %span.purchaseBtn__text 出品する
    = image_tag "icon_camera.png"