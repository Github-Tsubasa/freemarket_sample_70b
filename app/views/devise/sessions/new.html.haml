.wrapper
  = render "shared/user-header"

  .login-main
    .login-panel
      .register
        アカウントをお持ちでない方はこちら
        .register__register-btn
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to "新規会員登録", new_registration_path(resource_name)
      .new-user
        = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
          .new-user__address-form
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
          .new-user__pass-form
            = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"
          .actions
            = f.submit 'ログイン', class: "login-btn"
            = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "forget-link"

  = render "shared/user-footer"