.wrapper
  .logo-header
    .logo
      = link_to image_tag("logo.png", size: "200x50", alt: "サンプル画像"), root_path
  .login-main
    .login-panel
      .register
        アカウントをお持ちでない方はこちら
        .register__register-btn
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to "新規会員登録", new_registration_path(resource_name)
      -# .sns-api
      -#   .sns-api__facebook-btn
      -#     Facebookでログイン
      -#   .sns-api__google-btn
      -#     Googleでログイン
      .forms
        .forms__address-form
          =email_field :email, class: "address-form", placeholder: "メールアドレス"
        .forms__pass-form
          =password_field :password, autocomplete: "current-password", class: "pass-form", placeholder: "パスワード"
        .actions
          = submit_tag "ログイン", class: "login-btn"
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "forget-link"
  .logo-footer
    .logo-footer__link
      = link_to "プライバシーポリシー"
      = link_to "FURIMA 利用規約"
      = link_to "特定商取引に関する表記"
    .logo-footer__logo-white
      = link_to image_tag("logo.png", size: "200x50", alt: "サンプル画像"), root_path