.item-new
  .sellingitem
    -# = form_with(model: @item, local: true) do |f|
    = form_for @item do |f|
      = f.fields_for :itemimages do |itemimage|
        .images
          %h3
          出品画像
          %span 必須
          %p
          最大10枚までアップロードできます
          = itemimage.file_field :image, class: 'hidden'

      .name
        %h3
        商品名
        %span 必須
        = f.text_field :name, placeholder: "40文字まで"
      .explanation
        %h3
        商品の説明
        %span 必須
        = f.text_field :explanation, placeholder: "商品の説明（必須1,000文字以内）"

      -# .category
      -#   %h3
      -#   カテゴリー
      -#   %span 必須
      -#   = f.text_field :category, placeholder: "選択してください"

      .brand
        %h3
        ブランド
        %span 任意
        = f.text_field :brand, placeholder: "例）シャネル"

      .condition
        %h3
        商品の状態
        %span 必須
        = f.text_field :condition, placeholder: "選択してください"
      
      .postage
        %h3
        配送料の負担
        %span 必須
        = f.text_field :postage, placeholder: "選択してください"
      
      .area
        %h3
        配送元の地域
        %span 必須
        = f.text_field :area, placeholder: "選択してください"
      
      .day
        %h3
        配送元の地域
        %span 必須
        = f.text_field :day, placeholder: "選択してください"

      .price
        %h3
        販売価格
        %span 必須
        = f.text_field :price, placeholder: '0'
      
      .submit-btn
        = f.submit "出品する"

