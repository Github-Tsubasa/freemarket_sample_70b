.wrapper
  .header
    = render "shared/header"

  .mypage
    = render "shared/mypage-side"
    .main
      .content__title
        %h2 クレジットカード情報入力
      .content__credit-card
        .content__credit-card__inner
          = form_with url: credits_path, method: :post, html: { name: "inputForm" }, class:"card-regist" do |f| # createアクションのパスを指定
            = f.label :カード番号, class: 'label'
            %span.x 必須
            %br
            = f.text_field :card_number, type: 'text', class: 'input-number', placeholder: '半角数字のみ', maxlength: "16"
            %ul.signup-card-list
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1398199435',size: "49x20"
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1398199435',size: "34x20"
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1398199435',size: "30x20"
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1398199435',size: "32x20"
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1398199435',size: "21x20"
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1398199435',size: "31x20"
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1398199435',size: "31x20"
            .cards-expire
              = f.label :有効期限, class: 'label'
              %span.x 必須
              %br
              .cards-wrapper
                .cards-expire__wrap
                  = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire'
                  %span.expire-text 月 ／ 
                .cards-expire__wrap
                  = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-expire'
                  %span.expire-text 年
            .cards-expire
              = f.label :セキュリティコード, class: 'label'
              %span.x 必須
              %br
              = f.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
            .content-bottom#card_token
              = f.submit '追加する', class: 'content-bottom--add-btn', id: 'token_submit'
              = link_to "戻る", credits_path(current_user), class:"submit-btn__white"
  .footer
    = render "shared/footer"
