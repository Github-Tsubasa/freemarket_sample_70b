.wrapper
  .header
    = render "shared/user-header"
    
  .body

    %h1 登録住所変更
    = form_with(model: @address, local: true, url: "/users/#{current_user.id}/addresses/#{current_user.address.id}") do |f|
      .input-personal
        .infomation
          .title
            %p 住所
            %p.redicon 必須
          .postcode
            %p 郵便番号
            .postcode__number
              = f.text_field :postcode
                
          .addresses
            .prefecture
              .prefecture__title
                %p 　都道府県
              .prefecture__input
                = f.select :prefecture, [['北海道','北海道'],['青森県','青森県'],['岩手県','岩手県'],['宮城県','宮城県'],['秋田県','秋田県'],['山形県','山形県'],['福島県','福島県'],['茨城県','茨城県'],['栃木県','栃木県'],['群馬県','群馬県'],['埼玉県','埼玉県'],['千葉県','千葉県'],['東京都','東京都'],['神奈川県','神奈川県'],['新潟県','新潟県'],['富山県','富山県'],['石川県','石川県'],['福井県','福井県'],['山梨県','山梨県'],['長野県','長野県'],['岐阜県','岐阜県'],['静岡県','静岡県'],['愛知県','愛知県'],['三重県','三重県'],['滋賀県','滋賀県'],['京都府','京都府'],['大阪府','大阪府'],['兵庫県','兵庫県'],['奈良県','奈良県'],['和歌山県','和歌山県'],['鳥取県','鳥取県'],['島根県','島根県'],['岡山県','岡山県'],['広島県','広島県'],['山口県','山口県'],['徳島県','徳島県'],['香川県','香川県'],['愛媛県','愛媛県'],['高知県','高知県'],['福岡県','福岡県'],['佐賀県','佐賀県'],['長崎県','長崎県'],['熊本県','熊本県'],['大分県','大分県'],['宮崎県','宮崎県'],['鹿児島県','鹿児島県'],['沖縄県','沖縄県']], include_blank: "選択してください"

            .municipality
              %p 　市町村
              = f.text_field :municipality

            .address
              %p 　番地
              = f.text_field :address

            .apartment
              .apartment__title
                %p 　マンション名
              .apartment__input
                = f.text_field :room_number
                
          .input-names2
            .names
              .name1
                .title
                  %p 送付先お名前（全角）
                .character-name
                  .first
                    .first--input
                      .user_first_name
                        =f.text_field :sendname_first, placeholder:" 例）振間" 
                  .last
                    .last--input
                      .user_last_name
                        =f.text_field :sendname_last, placeholder:" 例）太郎" 
              .name2
                .title
                  %p  送付先お名前かな（全角）
                .kana-name
                  .first
                    .first--input
                      .user_first_name_kana                
                        =f.text_field :sendname_first_kana, placeholder:" 例）ふりま" 
                  .last
                    .last--input 
                      .user_last_name_kana
                        =f.text_field :sendname_last_kana, placeholder:" 例）たろう" 

          .phone
            .phone__title
              %p 　電話番号
            .phone__number
              = f.text_field :phone


      .button
        .contents
          .contents__message
          .contents__registration
            = f.submit '登録する', class: 'contents__registration' 

  .purchase-footer
    .purchase-footer__link
      = link_to "プライバシーポリシー"
      = link_to "FURIMA 利用規約"
      = link_to "特定商取引に関する表記"
    .purchase-footer__logo
      = link_to image_tag("logo.png", size: "200x50", alt: "サンプル画像"), root_path

